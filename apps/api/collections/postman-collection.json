{
  "info": {
    "name": "Beta Stack - Upload API",
    "_postman_id": "upload-api-collection",
    "description": "Endpoint de upload via streaming",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Main",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          }
        }
      ]
    },
    {
      "name": "Upload",
      "item": [
        {
          "name": "Upload via Streaming",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-File-Name",
                "value": "meu-video.mp4",
                "type": "text",
                "description": "Nome do arquivo (opcional - extensão detectada automaticamente)"
              }
            ],
            "body": {
              "mode": "file",
              "file": {}
            },
            "url": {
              "raw": "{{base_url}}/upload/stream",
              "host": ["{{base_url}}"],
              "path": ["upload", "stream"]
            },
            "description": "Upload de arquivo enviando dados binários raw. Selecione 'Binary' no body e escolha um arquivo. O Content-Type será automaticamente definido pelo Postman."
          }
        }
      ]
    }
  ]
}
